<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rep_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf7ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#003E6D"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/layer">

        <TextView
            android:id="@+id/rep_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Rep. Barbara Lee"
            android:textSize="18dp"
            android:fontFamily="serif"
            android:textColor="#EEEEEE"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:id="@+id/divider_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/state"
                android:text="CA"
                android:textSize="20dp"
                android:textColor="#EEEEEE"
                android:layout_margin="7dp" />

            <LinearLayout
                android:id="@+id/divider_one"
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#EEEEEE"></LinearLayout>

            <LinearLayout
                android:id="@+id/full_district"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_margin="7dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district"
                    android:text="13th"
                    android:textSize="18dp"
                    android:textColor="#EEEEEE"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTRICT"
                    android:textSize="8dp"
                    android:textColor="#EEEEEE"
                    android:textStyle="bold"
                    android:layout_marginTop="-4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#EEEEEE"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/party"
                android:text="DEM"
                android:textSize="20dp"
                android:textColor="#EEEEEE"
                android:layout_margin="7dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/rep_image_circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/barbara_lee_circle"
        android:layout_marginTop="7dp" />

</FrameLayout>