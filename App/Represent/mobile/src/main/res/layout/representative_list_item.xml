<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/representative_image"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/representative_party"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/representative_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/representative_district"
            android:textColor="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/representative_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2222ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="match_parent"
                android:src="@drawable/email_icon_small"/>

            <TextView
                android:id="@+id/representative_email"
                android:textColor="#222222"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="match_parent"
                android:src="@drawable/twitter_icon" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >


                <TextView
                    android:id="@+id/representative_twitter"
                    android:textColor="#444444"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"/>

                <TextView
                    android:id="@+id/representative_last_tweet"
                    android:textColor="#111111"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>